# GoDad后端服务环境变量配置示例
# 复制此文件为 .env 并填入实际的配置值

# 数据库配置
DB_HOST=127.0.0.1
DB_PORT=3307
DB_USER=root
DB_PASSWORD=123456
DB_NAME=godad

# Redis配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT配置
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRE_HOURS=168

# 服务器配置
SERVER_PORT=8888
GIN_MODE=debug


# 文件上传配置
UPLOAD_PATH=./uploads
MAX_UPLOAD_SIZE=10485760

# 邮件配置（可选）
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=

# 其他第三方服务配置
# 阿里云OSS（可选）
ALIYUN_ACCESS_KEY_ID=
ALIYUN_ACCESS_KEY_SECRET=
ALIYUN_OSS_BUCKET=
ALIYUN_OSS_ENDPOINT=
